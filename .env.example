# Configuration for Knowledge Graph Synthesis System

# Application Settings
APP_LANGUAGE=en              # Default language (en or ru)
APP_MAX_ITERATIONS=10        # Maximum iterations for recursive reasoning
APP_OUTPUT_DIR=./output      # Output directory for results

# LLM Provider Settings
LLM_PROVIDER=claude          # Default LLM provider (claude, gpt, gemini, deepseek, ollama)
LLM_MODEL=claude-3-7-sonnet-latest  # Default model
LLM_MAX_TOKENS=4000          # Maximum tokens for generation
LLM_TEMPERATURE=0.3          # Temperature for generation

# API Keys for LLM Providers
CLAUDE_API_KEY=your_anthropic_api_key_here
GPT_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_google_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here
# No API key needed for Ollama (local models)

# Logging Settings
LOG_LEVEL=INFO               # Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_FILE=app.log             # Log file path

# Performance Settings
CACHE_ENABLED=true           # Enable caching
CACHE_MAX_SIZE=100           # Maximum cache size
BATCH_SIZE=5                 # Batch size for parallel processing